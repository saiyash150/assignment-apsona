import {Redirect} from 'react-router-dom'
import {Component} from 'react'
import Cookies from 'js-cookie'
import {v4} from 'uuid'
import Card from '../Card'

import './index.css'

class Home extends Component {
  state = {
    notes: [
      {
        id: v4(),
        content: 'hi there',
        label: 'Education',
        archive: false,
        tag: false,
      },
    ],
    searchData: '',
    displayarchive: false,
  }

  toggleIsFavorite = id => {
    this.setState(prevState => ({
      notes: prevState.notes.map(eachCard => {
        if (id === eachCard.id) {
          return {...eachCard, tag: !eachCard.tag}
        }
        return eachCard
      }),
    }))
  }

  onAddCard = event => {
    event.preventDefault()

    const newCard = {
      id: v4(),
      content: '',
      label: 'Reminder',
      archive: false,
      tag: false,
    }

    this.setState(prevState => ({
      notes: [...prevState.notes, newCard],
    }))
  }

  updatesearch = event => {
    this.setState({searchData: event.target.value})
  }

  updatetext = (id, text) => {
    this.setState(prevState => ({
      notes: prevState.notes.map(eachCard => {
        if (id === eachCard.id) {
          return {...eachCard, content: text}
        }
        return eachCard
      }),
    }))
  }

  updatelabel = (id, data) => {
    this.setState(prevState => ({
      notes: prevState.notes.map(eachCard => {
        if (id === eachCard.id) {
          return {...eachCard, labe: data}
        }
        return eachCard
      }),
    }))
  }

  goOut = () => {
    const {history} = this.props
    history.replace('/')
    Cookies.remove('jwt_token')
  }

  setarchive = () => {
    this.setState({displayarchive: true})
  }

  savearchive = id => {
    this.setState(prevState => ({
      notes: prevState.notes.map(eachCard => {
        if (id === eachCard.id) {
          return {...eachCard, archive: true}
        }
        return eachCard
      }),
    }))
  }

  setpin = id => {
    this.setState(prevState => ({
      notes: prevState.notes.map(eachCard => {
        if (id === eachCard.id) {
          return {...eachCard, tag: !eachCard.tag}
        }
        return eachCard
      }),
    }))
  }

  deleteitem = id => {
    const {notes} = this.state
    const final = notes.filter(each => each.id !== id)
    this.setState({notes: final})
  }

  render() {
    const {searchData, notes, displayarchive} = this.state

    const result = notes.filter(each =>
      each.label.toLowerCase().includes(searchData.toLowerCase()),
    )
    const value = Cookies.get('jwt_token')
    if (value === undefined) {
      return <Redirect to="/" />
    }
    const last = notes.filter(each => each.archive === true)
    let dat
    if (displayarchive) {
      dat = last
    } else {
      dat = result
    }

    return (
      <>
        <nav className="nav-header">
          <div className="nav-content">
            <div className="nav-content nav-bar-large-container">
              <img
                className="website-logo"
                src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSaM8XslR7IehO5vEa4LR7f21gzQ9_xFlvX3Q&s"
                alt="website logo"
              />
              <div className="nav-menu">
                <button className="but" onClick={this.onAddCard}>
                  <p className="nav-menu-item">New</p>
                </button>

                <button className="but" onClick={this.setarchive}>
                  <p className="nav-menu-item">Archive</p>
                </button>
                <button className="but">
                  <p className="nav-menu-item">special</p>
                </button>
              </div>
              <button
                type="button"
                className="logout-desktop-btn"
                onClick={this.goOut}
              >
                Logout
              </button>
            </div>
          </div>
        </nav>
        <div className="home-container">
          <div className="search-container">
            <img
              src="data:image/png;base64,"
              className="search-logo"
            />
            <input
              type="search"
              className="search"
              value={searchData}
              onChange={this.updatesearch}
            />
          </div>
          <ul className="list-container">
            {dat.map(each => (
              <Card
                details={each}
                contentsave={this.updatetext}
                sendarchive={this.savearchive}
                labelsave={this.updatelabel}
                selectnote={this.setpin}
                deletenote={this.deleteitem}
                key={each.id}
              />
            ))}
          </ul>
        </div>
      </>
    )
  }
}

export default Home
